<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compilador Nativo JNI"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#212121" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compila archivos .c a bibliotecas .so nativas para Android"
            android:textSize="14sp"
            android:paddingBottom="24dp"
            android:textColor="#757575" />

        <!-- Sección de selección de archivo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Seleccionar archivo fuente"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:textColor="#212121" />

            <Button
                android:id="@+id/select_file_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELECCIONAR ARCHIVO .C"
                android:textSize="14sp"
                android:padding="12dp" />

            <TextView
                android:id="@+id/selected_file_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ningún archivo seleccionado"
                android:textSize="13sp"
                android:paddingTop="12dp"
                android:textColor="#757575"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Sección de compilación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Configurar y Compilar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:textColor="#212121" />

            <CheckBox
                android:id="@+id/save_external_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar en almacenamiento externo (/mis_so/)"
                android:textSize="14sp"
                android:paddingBottom="12dp" />

            <Button
                android:id="@+id/compile_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COMPILAR A .SO"
                android:textSize="16sp"
                android:padding="14dp"
                android:enabled="false" />

            <ProgressBar
                android:id="@+id/compile_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginTop="12dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Sección de ejecución -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Ejecutar Motor Gráfico"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:textColor="#212121" />

            <Button
                android:id="@+id/execute_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="▶️ EJECUTAR MOTOR GRÁFICO"
                android:textSize="16sp"
                android:padding="14dp"
                android:enabled="false"
                android:backgroundTint="#4CAF50" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="El motor gráfico se ejecutará en una nueva pantalla con renderizado EGL/OpenGL"
                android:textSize="12sp"
                android:paddingTop="8dp"
                android:textColor="#757575" />

        </LinearLayout>

        <!-- Sección de salida -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Resultado"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingBottom="12dp"
                android:textColor="#212121" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#263238"
                android:padding="12dp">

                <TextView
                    android:id="@+id/output_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Esperando compilación..."
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:textColor="#B0BEC5"
                    android:lineSpacingExtra="2dp" />

            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</ScrollView>