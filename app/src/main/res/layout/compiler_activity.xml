<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Barra de herramientas superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="1dp"
        android:elevation="0dp">

        <Button
            android:id="@+id/select_file_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ðŸ“"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginEnd="0dp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="ðŸ’¾"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginEnd="0dp"
            android:enabled="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/compile_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="âš™ï¸"
            android:textSize="20sp"
            android:padding="2dp"
            android:layout_marginEnd="0dp"
            android:enabled="false" />

        <Button
            android:id="@+id/execute_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="â–¶ï¸"
            android:textSize="20sp"
            android:padding="2dp"
            android:enabled="false"
             />

    </LinearLayout>

    <!-- Indicador de carga -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:visibility="gone" />

    <!-- Indicador de cambios -->
    <TextView
        android:id="@+id/change_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAMBIOS DETECTADOS"
        android:textSize="12sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="#FFF3E0"
        android:textColor="#FF9800"
        android:visibility="gone" />

    <!-- Checkbox para almacenamiento externo -->
    <CheckBox
        android:id="@+id/save_external_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar .so en /mis_so/"
        android:textSize="12sp"
        android:padding="8dp"
        android:background="#FFFFFF" />

    <!-- TabHost -->
    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Tabs -->
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" />

            <!-- Tab Content -->
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- Tab 1: Editor -->
                <ScrollView
                    android:id="@+id/tab_editor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#263238">

                    <EditText
                        android:id="@+id/code_editor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#757575"
                        android:hint="#include &lt;stdio.h&gt;\n\nint main() {\n    return 0;\n}"
                        android:gravity="top|start"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:background="#263238"
                        android:minLines="20"
                        android:scrollbars="vertical" />

                </ScrollView>

                <!-- Tab 2: Console -->
                <ScrollView
                    android:id="@+id/tab_console"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#263238"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/console_output"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Esperando compilaciÃ³n..."
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:textColor="#B0BEC5" />

                </ScrollView>

            </FrameLayout>


        </LinearLayout>

    </TabHost>

    <!-- Progress Bar de compilaciÃ³n -->
    <ProgressBar
        android:id="@+id/compile_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:indeterminate="true"
        android:visibility="gone" />

</LinearLayout>